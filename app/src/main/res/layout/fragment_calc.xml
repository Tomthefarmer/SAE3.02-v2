<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Zone d'affichage -->
    <TextView
        android:id="@+id/tv_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@android:color/white"
        android:elevation="2dp"
        android:gravity="end|bottom"
        android:padding="20dp"
        android:text="0"
        android:textColor="@android:color/black"
        android:textSize="48sp"
        android:fontFamily="sans-serif-thin" />

    <!-- Clavier (4 colonnes) -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4">

        <!-- Ligne 1 : AC, DEL, (vide), / -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_clear"
            style="@style/CalcButtonStyle"
            android:text="AC"
            android:textColor="@android:color/white"
            app:backgroundTint="@android:color/holo_red_dark"
            android:textSize="14sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_del"
            style="@style/CalcButtonStyle"
            android:text="DEL"
            android:textColor="@android:color/white"
            app:backgroundTint="@android:color/darker_gray"
            android:textSize="14sp" />

        <!-- Espace vide ou bouton supplÃ©mentaire -->
        <View
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_div"
            style="@style/CalcButtonStyle"
            android:text="/"
            app:backgroundTint="@color/material_dynamic_primary50"
            android:textSize="20sp" />

        <!-- Ligne 2 : 7, 8, 9, * -->
        <com.google.android.material.button.MaterialButton android:id="@+id/btn_7" android:text="7" style="@style/CalcButtonStyle" />
        <com.google.android.material.button.MaterialButton android:id="@+id/btn_8" android:text="8" style="@style/CalcButtonStyle" />
        <com.google.android.material.button.MaterialButton android:id="@+id/btn_9" android:text="9" style="@style/CalcButtonStyle" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_mul"
            style="@style/CalcButtonStyle"
            android:text="*"
            app:backgroundTint="@color/material_dynamic_primary50"
            android:textSize="20sp" />

        <!-- Ligne 3 : 4, 5, 6, - -->
        <com.google.android.material.button.MaterialButton android:id="@+id/btn_4" android:text="4" style="@style/CalcButtonStyle" />
        <com.google.android.material.button.MaterialButton android:id="@+id/btn_5" android:text="5" style="@style/CalcButtonStyle" />
        <com.google.android.material.button.MaterialButton android:id="@+id/btn_6" android:text="6" style="@style/CalcButtonStyle" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_sub"
            style="@style/CalcButtonStyle"
            android:text="-"
            app:backgroundTint="@color/material_dynamic_primary50"
            android:textSize="20sp" />

        <!-- Ligne 4 : 1, 2, 3, + -->
        <com.google.android.material.button.MaterialButton android:id="@+id/btn_1" android:text="1" style="@style/CalcButtonStyle" />
        <com.google.android.material.button.MaterialButton android:id="@+id/btn_2" android:text="2" style="@style/CalcButtonStyle" />
        <com.google.android.material.button.MaterialButton android:id="@+id/btn_3" android:text="3" style="@style/CalcButtonStyle" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_add"
            style="@style/CalcButtonStyle"
            android:text="+"
            app:backgroundTint="@color/material_dynamic_primary50"
            android:textSize="20sp" />

        <!-- Ligne 5 : 0 (prend 2 colonnes), . , = -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_0"
            style="@style/CalcButtonStyle"
            android:layout_columnSpan="2"
            android:layout_width="0dp"
            android:text="0" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_dot"
            style="@style/CalcButtonStyle"
            android:text="."
            android:textSize="20sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_equal"
            style="@style/CalcButtonStyle"
            android:text="="
            app:backgroundTint="@android:color/holo_orange_dark"
            android:textSize="20sp" />

    </GridLayout>
</LinearLayout>